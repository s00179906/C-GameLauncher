<Page x:Class="GameLauncher.Views.GameDetailedView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameLauncher.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="GameDetailedView">

    <Grid>
        <Image Source="{Binding RandomSelectedGameScreenshot, UpdateSourceTrigger=PropertyChanged}"
                   
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <Button Command="{Binding BackToMainViewCommand}"
                Width="100"
                Height="30"
                Content="Back"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left"
                Margin="10"/>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="10">
            <Button Foreground="Transparent"
                Cursor="Hand"
                Width="220"
                Height="270"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="10"
                Command="{Binding TileCommand}" 
                CommandParameter="{Binding}"
                BorderThickness="0">

                <Image Source="{Binding SelectedGame.GameCover}"
                   Width="220"
                   Height="270"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
            </Button>
            <Button Content="PLAY" 
                    Width="200"
                    Height="50"
                    Foreground="#fff"
                    Background="#FFA000"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Command="{Binding TileCommand}" 
                    CommandParameter="{Binding}"/>
        </StackPanel>

        
    </Grid>
</Page>
