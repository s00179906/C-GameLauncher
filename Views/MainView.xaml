<Page x:Class="GameLauncher.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             Dialog:DialogParticipation.Register="{Binding}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#151518"
             >
    <Grid Margin="10" Background="#151518">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.95*"/>
        </Grid.ColumnDefinitions>

        <!--Side Bar Buttons-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    Command="{Binding FilterGamesCommand}"
                    CommandParameter="ALL"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="AllInclusive"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Command="{Binding FilterGamesCommand}"
                    CommandParameter="STEAM"
                    Height="45"
                    Width="45"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="Steam"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    CommandParameter="EPIC"
                    Command="{Binding FilterGamesCommand}"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="GamepadVariant"></iconPacks:PackIconMaterial>
            </Button>
            <Button Grid.Row="3" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    CommandParameter="UPLAY"
                    Command="{Binding FilterGamesCommand}"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="Network"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="3" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    CommandParameter="UPLAY"
                    Command="{Binding FilterGamesCommand}"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="Network"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="4" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    CommandParameter="NONE"
                    Command="{Binding FilterGamesCommand}"
                    Height="45"
                    Width="45"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="Package"></iconPacks:PackIconMaterial>
            </Button>
            <Button Grid.Row="5" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Command="{Binding SetPreferedEXECommand}"
                    Height="45"
                    Width="45"
                    Background="#151518">
                <iconPacks:PackIconMaterial Kind="Plus"></iconPacks:PackIconMaterial>
            </Button>

        </Grid>

        <TabControl Grid.Column="1" Background="#151518">
            <!--Games Tab-->
            <TabItem Header="Games">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Rectangle DockPanel.Dock="Left" Width="20" Margin="0 0 5 0" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" >
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{iconPacks:Material Kind=Gamepad}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label Padding="0"
                                Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}"
                                FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.FontSize)}"
                                >
                                Games
                            </Label>
                        </DockPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <Grid Margin="10" Background="#151518" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>

                    <ListBox Grid.Column="0" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemsSource="{Binding Games}" 
                             Background="#151518">
                        
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Background="#151518" 
                                           Orientation="Horizontal"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Background="#151518">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Controls:Tile                 
                                        Title="{Binding Name}"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Cursor="Hand"
                                        Width="230"
                                        Height="270"
                                        Command="{Binding DataContext.TileCommand,RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" 
                                        CommandParameter="{Binding}">
                                        <Image 
                                           Source="{Binding GameCover}"/>
                                    </Controls:Tile>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        
                    </ListBox>
                </Grid>
            </TabItem>

            <!--Settings Tab-->
            <TabItem>
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Rectangle DockPanel.Dock="Left" Width="20" Margin="0 0 5 0" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" >
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{iconPacks:Material Kind=Settings}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label Padding="0"
                                Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}"
                                FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.FontSize)}"
                                >
                                Settings
                            </Label>
                        </DockPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Expander Header="Game folder paths" Grid.Row="0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label>Game Folders</Label>
                            <ListBox 
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                ItemsSource="{Binding Scanner.LibraryDirectories, UpdateSourceTrigger=PropertyChanged}" 
                                DisplayMemberPath="InstallationPath" 
                                BorderThickness="1"
                                ScrollViewer.CanContentScroll="True" 
                                SelectedItem="{Binding SelectedFolder}">
                            </ListBox>
                            <Button Command="{Binding AddFolderPathCommand}" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Padding="8" Margin="8 0 0 0">
                                <iconPacks:Material Kind="Plus"></iconPacks:Material>
                            </Button>
                            <Button Command="{Binding DeleteFolderPathCommand}" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Padding="8" Margin="70 0 0 0">
                                <iconPacks:Material Kind="Minus"></iconPacks:Material>
                            </Button>
                            <Button Command="{Binding ResetAllSettingsCommand}" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Padding="8" Margin="8 0 0 0">
                                <iconPacks:Material Kind="Refresh"></iconPacks:Material>
                            </Button>
                            <Button Command="{Binding ScanGamesCommand}" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Padding="8" Margin="70 0 0 0">
                                <iconPacks:Material Kind="Scanner"></iconPacks:Material>
                            </Button>
                        </Grid>
                    </Expander>
                    <Expander Header="Other shit" Grid.Row="1">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Height="100">

                                <TextBlock Text="{Binding SelectedGame2}" Foreground="White" FontSize="10" />
                                <ListBox ItemsSource="{Binding Games}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedGame2}" Height="50"></ListBox>
                            </StackPanel>
                        </Grid>
                    </Expander>
                </Grid>

            </TabItem>
        </TabControl>
    </Grid>
</Page>
