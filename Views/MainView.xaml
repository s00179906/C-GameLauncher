<UserControl x:Class="GameLauncher.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.95*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    Command="{Binding FilterSteamGamesCommand}">
                <iconPacks:PackIconMaterial Kind="AllInclusive"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Command="{Binding FilterSteamGamesCommand}"
                    CommandParameter="Steam"
                    Height="45"
                    Width="45">
                <iconPacks:PackIconMaterial Kind="Steam"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    CommandParameter="Epic"
                    Command="{Binding FilterSteamGamesCommand}">
                <iconPacks:PackIconMaterial Kind="GamepadVariant"></iconPacks:PackIconMaterial>
            </Button>
            <Button Grid.Row="3" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="45"
                    Width="45"
                    CommandParameter="Uplay"
                    Command="{Binding FilterSteamGamesCommand}">
                <iconPacks:PackIconMaterial Kind="Network"></iconPacks:PackIconMaterial>
            </Button>

            <Button Grid.Row="4" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Command="{Binding LaunchGameCommand}"
                    Height="45"
                    Width="45">
                <iconPacks:PackIconMaterial Kind="Play"></iconPacks:PackIconMaterial>
            </Button>

        </Grid>

        <TabControl Grid.Column="1">
            <TabItem Header="Games">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Rectangle DockPanel.Dock="Left" Width="20" Margin="0 0 5 0" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" >
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{iconPacks:Material Kind=Gamepad}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label Padding="0"
                                Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}"
                                FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.FontSize)}"
                                >
                                Games
                            </Label>
                        </DockPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0">Games might go here</TextBlock>
                    <ListBox Grid.Column="0" 
                             BorderThickness="1" 
                             ItemsSource="{Binding Games}" 
                             SelectedItem="{Binding SelectedGame}">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <!--<ColumnDefinition/>-->
                                    </Grid.ColumnDefinitions>

                                    <!--<Image Source="{Binding Path=ImageSource, Mode=OneTime}" Height="180" Grid.Row="0" Grid.Column="2"/>-->
                                    <TextBlock Text="{Binding Name}" 
                                               Grid.Row="0" 
                                               Grid.Column="0"
                                               HorizontalAlignment="Center"
                                               FontSize="16"/>

                                    <TextBlock Text="{Binding Platform}"
                                               Grid.Row="0" 
                                               Grid.Column="1"
                                               HorizontalAlignment="Center"
                                               FontSize="16"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Rectangle DockPanel.Dock="Left" Width="20" Margin="0 0 5 0" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" >
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{iconPacks:Material Kind=Settings}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label Padding="0"
                                Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}"
                                FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.FontSize)}"
                                >
                                Settings
                            </Label>
                        </DockPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>


                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label>Game Folders</Label>
                    <ListBox Grid.Row="0" ItemsSource="{Binding Scanner.LibraryDirectories}" DisplayMemberPath="InstallationPath" BorderThickness="1" ScrollViewer.CanContentScroll="True" SelectedItem="{Binding SelectedFolder}"></ListBox>
                    <Button Command="{Binding AddFolderPathCommand}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Padding="8" Margin="8 0 0 0">
                        <iconPacks:Material Kind="Plus"></iconPacks:Material>
                    </Button>
                    <Button Command="{Binding DeleteFolderPathCommand}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Padding="8" Margin="8 0 0 0">
                        <iconPacks:Material Kind="Minus"></iconPacks:Material>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
